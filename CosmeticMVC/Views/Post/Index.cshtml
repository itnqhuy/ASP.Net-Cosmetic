    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="header__logo">
                    <a asp-controller="Home" asp-action="Index"><img src="img/logo.png" alt=""></a>
                </div>
            </div>
            <div class="col-lg-7">
